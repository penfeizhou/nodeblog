<br/>
<% article.comments.forEach(function (comment, index) { %>
<p><a href="<%= comment.website %>"><%= comment.name %></a>
    <span class="info"> 回复于 <%= comment.time %></span></p>
<p><%- comment.content %></p>
<% }) %>
<form method="post">
    <% if (user) { %>
    姓名：<input type="text" name="cname" value="<%= user.name %>"/><br/>
    邮箱：<input type="text" name="cemail" value="<%= user.email %>"/><br/>
    网址：<input type="text" name="cwebsite" value="/u/<%= user.name %>"/><br/>
    <% } else { %>
    姓名：<input type="text" name="cname"/><br/>
    邮箱：<input type="text" name="cemail"/><br/>
    网址：<input type="text" name="cwebsite" value="http://"/><br/>
    <% } %>
    <textarea name="content" rows="5" cols="80"></textarea><br/>
    <input type="submit" value="留言"/>
</form>