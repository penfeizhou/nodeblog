<%- include header %>
<% if (user && (user.name == article.name)) { %>
<span><a class="edit" href="/edit/<%= article.name %>/<%= article.time.day %>/<%= article.title %>">编辑</a></span>
<span><a class="edit" href="/remove/<%= article.name %>/<%= article.time.day %>/<%= article.title %>">删除</a></span>
<% } %>
<p class="info">
    作者：<a href="/u/<%= article.name %>"><%= article.name %></a> |
    日期：<%= article.time.minute %>|
    标签：
    <% if (article.tags){ %>
    <% article.tags.forEach(function (tag, index) { %>
    <% if (tag) { %>
    <a class="tag" href="/tags/<%= tag %>"><%= tag %></a>
    <% } %>
    <% }) %>
    <% } %>
</p>
<p><%- article.content %></p>
<%- include comment %>
<%- include footer %>